<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"

    tools:context=".Bulletin.BulletinActivity">

    <Button
        android:id="@+id/buttonForAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/messageToAdd"
        android:text="Add" />

    <EditText
        android:id="@+id/messageToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:inputType="textPersonName"
        android:hint="Enter Text"
        android:text="" />

    <TextView
        android:id="@+id/titleBulletin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Bulletin Board" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/titleBulletin"
        android:layout_above="@id/buttonForAdd"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/back"
                android:text=""
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

