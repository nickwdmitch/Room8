<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.RoomSettings.RoomSettingsActivity">

    <TextView
        android:id="@+id/RoomSettingsTextView"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Settings" />

    <ListView
        android:id="@+id/userList"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_below="@id/RoomSettingsTextView"
        android:layout_marginBottom="200dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/SettingsExplanationTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Click on a user to switch them from a Viewer to an Editor or an Editor to a Viewer" />

    <Button
        android:id="@+id/deleteRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Delete Room" />

    <Switch
        android:id="@+id/switchDeleteFromRoom"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_above="@id/deleteRoom"
        android:text="Turn on to delete room members" />
</RelativeLayout>