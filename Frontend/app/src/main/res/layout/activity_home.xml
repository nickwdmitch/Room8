<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.HomeActivity">

    <TextView
        android:id="@+id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Room8" />

    <TextView
        android:id="@+id/RoomNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="10sp"
        android:textSize="20sp"
        android:layout_below="@id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/RoomIdTextView"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/RoomNameTextView"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <Button
        android:id="@+id/tempButton"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@id/RoomIdTextView"
        android:text="Room Lists" />

    <Button
        android:id="@+id/tempButtonBulletin"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempButton"
        android:layout_margin="30dp"
        android:text="Room Bulletin" />

    <Button
        android:id="@+id/tempButtonSchedule"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempButtonBulletin"
        android:text="Room Schedule" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tempButtonSchedule"
        android:layout_centerHorizontal="true"
        android:text="Logout" />

    <Button
        android:id="@+id/btnLeaveRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogout"
        android:layout_centerHorizontal="true"
        android:text="LeaveRoom" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Room Settings" />

    <Button
        android:id="@+id/btnUserSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text=" User Settings" />

</RelativeLayout>