<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="20dp"
    tools:context=".List.ListActivity">

    <TextView
        android:id="@+id/TitleForList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <ListView
        android:id="@+id/ListActivityList"
        android:layout_width="match_parent"
        android:layout_marginBottom="150dp"
        android:layout_below="@id/descriptionUnderTitle"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/EnterNewListItem"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="50dp"
        android:inputType="textPersonName"
        android:hint="Input New Task"
        android:text="" />

    <Button
        android:id="@+id/AddNewListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/EnterNewListItem"
        android:layout_centerHorizontal="true"
        android:text="Add To List" />

    <TextView
        android:id="@+id/descriptionUnderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TitleForList"
        android:layout_centerHorizontal="true"
        android:text="Description" />

    <Switch
        android:id="@+id/switchList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EnterNewListItem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp"
        android:text="Complete Mode" />
</RelativeLayout>